@model List<dbfEvent.Web.Models.ViewModel.EmployeeCreateVM>

@{
    ViewData["Title"] = "Personel Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/assets/img/claire-nakkachi-I9meM8YQ9DM-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.3;
            z-index: -1;
        }

        h2 {
            text-align: center;
            margin: 30px 0;
            color: #333;
            opacity : 0.7;
        }

        .table-wrapper {
            padding: 0 30px 50px 30px;
        }

        .custom-table {
            background-color: rgba(255,255,255,0.95);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            opacity : 0.7;
        }

        th {
            background-color: #8b3e57;
            color: darkred;
            text-align: center;
        }

        td {
            text-align: center;
            color: #333;
        }
    </style>
}

<h2>Personel Listesi</h2>

<div class="table-wrapper">
    <table class="table table-bordered custom-table">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Etkinlik</th>
                <th>Başlangıç Tarihi</th>
                <th>Departman</th>
                <th>Rol</th>
                <th>Deneyim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EventName</td>
                    <td>@employee.WorkTime.ToString()</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.Role</td>
                    <td>@employee.Experience</td>
                </tr>
            }
        </tbody>
    </table>
</div>
