@model dbfEvent.Web.Models.ViewModel.EmployeeCreateVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Yeni Görevli Ekle";
}

@section Styles {
    <style>
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/assets/img/claire-nakkachi-I9meM8YQ9DM-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.4; /* Arka planı daha soluk yapar */
            z-index: -1;
        }

        .form-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 90vh;
            padding: 30px;
        }

        .form-card {
            background-color: rgba(255, 255, 255, 0.85); /* Daha saydam */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 600px;
        }

        h2 {
            text-align: center;
            color: #444; /* koyu gri */
            margin-bottom: 25px;
        }

        label.form-label,
        span.text-danger,
        input.form-control,
        select.form-select {
            color: #444; /* koyu gri */
        }

        .form-control,
        .form-select {
            border-radius: 8px;
            background-color: #fdfdfd;
            border: 1px solid #ccc;
        }

        .btn-success {
            width: 100%;
            font-weight: bold;
        }
    </style>
}

<div class="form-wrapper">
    <div class="form-card">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Ad Soyad :</label>
                <input asp-for="EmployeeName" class="form-control" placeholder="Ad Soyad Giriniz" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Adres :</label>
                <input asp-for="Address" class="form-control" placeholder="Adres Giriniz" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Departman Seçimi :</label>
                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select">
                    <option value="">-- Departman Seçiniz --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Etkinlik Seçimi :</label>
                <select asp-for="EventId" asp-items="Model.Events" class="form-select">
                    <option value="">-- Etkinlik Seçiniz --</option>
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Başlangıç Tarih-Saat :</label>
                <input asp-for="WorkTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="WorkTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Deneyim :</label>
                <input asp-for="Experience" class="form-control" placeholder="Deneyim Giriniz" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Rol :</label>
                <input asp-for="Role" class="form-control" placeholder="Rol Giriniz" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>
</div>
