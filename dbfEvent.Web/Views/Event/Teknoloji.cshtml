
@model IEnumerable<dbfEvent.Data.Models.Event>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section Styles {
    <style>
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/assets/img/steve-johnson-ZPOoDQc8yMw-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.25;
            z-index: -1;
        }
    </style>
}

<div class="container mt-5 d-flex flex-column align-items-center">
    <h1 class="mb-4 text-black">Teknoloji Zirveleri</h1>

    <div class="row justify-content-center g-4" style="max-width: 900px; width: 100%;">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="card shadow-lg text-black" style="width: 380px; border-radius: 15px; background: rgba(255, 255, 255, 0.15); backdrop-filter: saturate(180%) blur(12px);">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center mb-3">@item.EventName</h5>
                        <p class="card-text mb-4" style="flex-grow:1;">@item.Description</p>

                        <div class="d-flex justify-content-between mb-3 small text-dark">
                            <div>
                                <strong>Başlangıç:</strong><br />
                                @item.StartDate.ToString()
                            </div>
                            <div>
                                <strong>Bitiş:</strong><br />
                                @item.FinishDate.ToString()
                            </div>
                        </div>

                        <div class="mb-2 small" style="color:#ff4d4d;">
                            <strong>Lokasyon:</strong> @item.Location
                        </div>
                        <div class="mb-3 small" style="color:#ff4d4d; font-weight: 600;">
                            <strong>Katılımcı Sınırı:</strong> @item.ParticipantsLimit
                        </div>

                        <a asp-action="BiletAl" asp-controller="Ticket" asp-route-eventType="@item.EventType" asp-route-eventName="@item.EventName" class="btn btn-danger mt-auto" style="width: 100%;" onclick="biletAL(this)">
                            🎟️ Bilet Al
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<script>function biletAL(element) {
        alert("Bilet Al sayfasına yönlendiriliyorsunuz!");
    }</script>

