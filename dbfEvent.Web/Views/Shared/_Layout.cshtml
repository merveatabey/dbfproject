<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dbfEvent.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dbfEvent.Web.styles.css" asp-append-version="true" />
    <style>
        body {
            position: relative;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            color: #fff;
            z-index: 0;
        }

        /* İçerik kutusu ve diğer elementler (önceki ayarların devamı) */
        header, footer {
            background-color: rgba(255, 255, 255, 0.8);
            position: relative;
            z-index: 1;
        }

        main.container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            padding: 1.5rem;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0 15px rgba(0,0,0,0.3);
            color: #000;
            position: relative;
            z-index: 1;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

